USE Company
GO

--JOIN / INNER JOIN
SELECT * FROM tableEmployees;
SELECT * FROM tableDepartments;

SELECT * FROM tableEmployees, 
              tableDepartments;

SELECT EmployeeID, EmployeeName, DepartmentName
FROM tableEmployees,
     tableDepartments;

SELECT EmployeeID, EmployeeName, DepartmentName
FROM tableEmployees
JOIN tableDepartments
ON tableEmployees.DepID = tableDepartments.DepID;
